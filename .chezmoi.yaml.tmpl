{{- $email := "" -}}
{{- if hasKey . "email" }}{{- $email = .email -}}
{{- else -}}{{- $email := promptString "email" -}}
{{- end -}}

{{- $location := "" -}}
{{- if hasKey . "location" }}{{- $location = .location -}}
{{- else -}}{{- $location := promptString "location" -}}
{{- end -}}

data:
  email: {{ $email }}
  location: {{ $location }}
  gpg:
    keyId: {{ .gpg.keyid }}
    keyRingDocument: {{ .gpg.keyringdocument }}
  ssh:
    publicKeyDocument: {{ .ssh.publickeydocument }}
    privateKeyDocument: {{ .ssh.privatekeydocument }}
  pypi:
    host: {{ .pypi.host }}
    repo: {{ .pypi.repo }}
    username: {{ .pypi.username }}
    password: {{ .pypi.password }}
